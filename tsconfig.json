{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [],
  "exclude": ["scripts", "vitest.config.ts"],
  "references": [
    { "path": "packages/protocol" },
    { "path": "packages/compute-router" },
    { "path": "apps/coordinator-core" },
    { "path": "apps/coordinator-monad" },
    { "path": "apps/coordinator-solana" },
    { "path": "apps/worker-desktop" },
    { "path": "apps/seeker-simulator" },
    { "path": "apps/cloudbot-demo" }
  ]
}
